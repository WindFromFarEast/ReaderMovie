/*设置引导页背景色*/
page{
    height: 100%;
    background-color: #b3d4db;
}

.container{
    /*将容器view变为弹性模型*/
    display: flex;
    /*头像、欢迎文字、按钮纵向排列*/
    flex-direction: column;
    /*头像、欢迎文字、按钮居中对齐*/
    align-items: center;
    /*整个*/
    background-color: #b3d4db;
}

/*用户头像*/
.user-avatar{
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
}

/*用户名称字体样式*/
.user-name{
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 100rpx;
}

/*按钮边框样式*/
.moto-container{
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    border-radius: 5px;
    margin-top: 200rpx;
}

/*按钮字体样式*/
.moto{
    font-size: 22rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #405f80
}
