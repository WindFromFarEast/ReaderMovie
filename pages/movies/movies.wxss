@import "/pages/movies/movie-list/movie-list-template.wxss";
@import "/pages/movies/movie-grid/movie-grid-template.wxss";

/*电影首页样式*/

.search {
    background-color: #f2f2f2;
    height: 80rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.search-img {
    margin: auto 0 auto 20rpx;
}

.placeholder {
    font-size: 25rpx;
    color: #d1d1d1;
    margin-left: 20rpx;
}

.search input {
    height: 100%;
    width: 80%;
    margin-left: 20rpx;
    font-size: 25rpx;
}

.search image {
    height: 25rpx;
    width: 25rpx;
    margin: auto 0 auto 10rpx;
}

.container {
    background-color: #f2f2f2;
}

.search-pannel {
    position: absolute;
    top: 80rpx;
}
